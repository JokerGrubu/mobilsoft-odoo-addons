            <field name="name">Banka Entegrasyonu: Otomatik Senkronizasyon</field>
            <field name="model_id" ref="model_bank_connector" />
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_connectors()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False" />
            <field name="priority">5</field>
        </record>

    </data>
</odoo>
