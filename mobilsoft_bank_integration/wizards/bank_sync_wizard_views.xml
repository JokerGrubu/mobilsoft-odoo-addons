<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Bank Sync Wizard Form -->
    <record id="view_bank_sync_wizard_form" model="ir.ui.view">
        <field name="name">bank.sync.wizard.form</field>
        <field name="model">bank.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Banka Senkronizasyonu">
                <group>
                    <field name="connector_ids" widget="many2many_tags" />
                    <field name="sync_type" />
                    <field name="date_from"
                        invisible="sync_type not in ('transactions', 'all')" />
                    <field name="date_to"
                        invisible="sync_type not in ('transactions', 'all')" />
                </group>
                <footer>
                    <button name="action_sync" string="Senkronize Et"
                        type="object" class="btn-primary" />
                    <button string="Ä°ptal" special="cancel"
                        class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_sync_wizard" model="ir.actions.act_window">
        <field name="name">Banka Senkronizasyonu</field>
        <field name="res_model">bank.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
