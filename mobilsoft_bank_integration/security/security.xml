<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Security Groups -->
        <record id="group_bank_integration_user" model="res.groups">
            <field name="name">Banka Entegrasyonu Kullanıcı</field>
            <field name="comment">Banka bağlantılarını ve işlemleri görüntüleyebilir</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_bank_integration_manager" model="res.groups">
            <field name="name">Banka Entegrasyonu Yönetici</field>
            <field name="implied_ids" eval="[(4, ref('group_bank_integration_user'))]" />
            <field name="comment">Banka bağlantılarını yapılandırabilir ve yönetebilir</field>
        </record>

        <!-- Record Rules (multi-company) -->
        <record id="bank_connector_company_rule" model="ir.rule">
            <field name="name">Banka Konektörü: çoklu şirket</field>
            <field name="model_id" ref="model_bank_connector" />
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
