<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action (must be defined before views that reference it) -->
    <record id="action_bank_transaction" model="ir.actions.act_window">
        <field name="name">Bank Transactions</field>
        <field name="res_model">bank.transaction</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Bank Transaction Form View -->
    <record id="view_bank_transaction_form" model="ir.ui.view">
        <field name="name">bank.transaction.form</field>
        <field name="model">bank.transaction</field>
        <field name="arch" type="xml">
            <form string="Bank Transaction">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" />
                            <field name="bank_account_id" />
                            <field name="date" />
                            <field name="transaction_type" />
                        </group>
                        <group>
                            <field name="amount" />
                            <field name="currency_id" />
                            <field name="balance_after" />
                            <field name="partner_name" />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Bank Transaction List View -->
    <record id="view_bank_transaction_list" model="ir.ui.view">
        <field name="name">bank.transaction.list</field>
        <field name="model">bank.transaction</field>
        <field name="arch" type="xml">
            <list string="Bank Transactions">
                <field name="date" />
                <field name="reference" />
                <field name="bank_account_id" />
                <field name="partner_name" />
                <field name="transaction_type" />
                <field name="amount" />
                <field name="currency_id" />
                <field name="state" />
            </list>
        </field>
    </record>

</odoo>
