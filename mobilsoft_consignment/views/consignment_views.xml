<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Konsinye Teslimat Form View -->
    <record id="view_mobilsoft_consignment_form" model="ir.ui.view">
        <field name="name">joker.consignment.form</field>
        <field name="model">joker.consignment</field>
        <field name="arch" type="xml">
            <form string="Konsinye Teslimat">
                <header>
                    <button name="action_confirm" string="Onayla" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_deliver" string="Teslim Et" type="object" 
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_create_invoice" string="Fatura Oluştur" type="object" 
                            class="btn-success" invisible="state not in ('delivered', 'partial')"/>
                    <button name="action_return" string="İade Al" type="object" 
                            invisible="state not in ('delivered', 'partial')"/>
                    <button name="action_cancel" string="İptal" type="object" 
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_draft" string="Taslağa Dön" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,delivered,partial,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Ürünler" name="products">
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" optional="show"/>
                                    <field name="price_unit"/>
                                    <field name="sold_qty"/>
                                    <field name="returned_qty"/>
                                    <field name="remaining_qty"/>
                                    <field name="invoiced_qty"/>
                                    <field name="subtotal" sum="Toplam"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="total_qty" string="Toplam Miktar"/>
                                <field name="sold_qty" string="Satılan"/>
                                <field name="returned_qty" string="İade"/>
                                <field name="remaining_qty" string="Kalan"/>
                                <field name="total_value" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        
                        <page string="Ön Ödeme" name="advance">
                            <group>
                                <group>
                                    <field name="advance_amount"/>
                                    <field name="advance_date"/>
                                </group>
                                <group>
                                    <field name="advance_journal_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Notlar" name="notes">
                            <field name="notes" placeholder="Ek notlar..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Konsinye Teslimat List View -->
    <record id="view_mobilsoft_consignment_list" model="ir.ui.view">
        <field name="name">joker.consignment.list</field>
        <field name="model">joker.consignment</field>
        <field name="arch" type="xml">
            <list string="Konsinye Teslimatlar">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="warehouse_id"/>
                <field name="total_qty"/>
                <field name="sold_qty"/>
                <field name="remaining_qty"/>
                <field name="total_value"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Konsinye Teslimat Search View -->
    <record id="view_mobilsoft_consignment_search" model="ir.ui.view">
        <field name="name">joker.consignment.search</field>
        <field name="model">joker.consignment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>

    <!-- Konsinye Teslimat Action -->
    <record id="action_mobilsoft_consignment" model="ir.actions.act_window">
        <field name="name">Konsinye Teslimatlar</field>
        <field name="res_model">joker.consignment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk konsinye teslimatınızı oluşturun!
            </p>
        </field>
    </record>
</odoo>
