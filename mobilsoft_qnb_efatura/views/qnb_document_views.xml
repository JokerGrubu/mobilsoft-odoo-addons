<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QNB Document Line List View -->
    <record id="view_qnb_document_line_list" model="ir.ui.view">
        <field name="name">qnb.document.line.list</field>
        <field name="model">qnb.document.line</field>
        <field name="arch" type="xml">
            <list editable="bottom"
                  decoration-success="match_status in ('matched_barcode', 'matched_code', 'matched_name')"
                  decoration-warning="match_status == 'matched_fuzzy'"
                  decoration-danger="match_status == 'not_matched'"
                  decoration-info="match_status == 'created'">
                <field name="product_name"/>
                <field name="product_code"/>
                <field name="barcode"/>
                <field name="quantity"/>
                <field name="uom_code"/>
                <field name="price_unit"/>
                <field name="price_subtotal" sum="Toplam"/>
                <field name="tax_percent"/>
                <field name="product_id"/>
                <field name="match_status" widget="badge"/>
                <field name="match_score" optional="hide"/>
                <button name="action_match_product" type="object" string="üîç E≈üle≈ütir"
                        class="btn-sm btn-primary" invisible="product_id"/>
            </list>
        </field>
    </record>

    <!-- QNB Document Form View -->
    <record id="view_qnb_document_form" model="ir.ui.view">
        <field name="name">qnb.document.form</field>
        <field name="model">qnb.document</field>
        <field name="arch" type="xml">
            <form string="e-Belge">
                <header>
                    <button name="action_create_invoice" type="object" string="üìã Fatura Olu≈ütur"
                            class="btn-primary" invisible="move_id or direction == 'outgoing'"/>
                    <button name="%(account.action_move_in_invoice_type)d" type="action" string="üìÑ Faturayƒ± G√∂r√ºnt√ºle"
                            class="btn-info" invisible="not move_id" context="{'default_move_id': move_id}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,sending,sent,delivered,accepted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Belge Bilgileri">
                            <field name="document_type"/>
                            <field name="direction"/>
                            <field name="ettn"/>
                            <field name="scenario"/>
                        </group>
                        <group string="Taraflar">
                            <field name="partner_id"/>
                            <field name="move_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Tutarlar">
                            <field name="amount_untaxed"/>
                            <field name="amount_tax"/>
                            <field name="amount_total"/>
                            <field name="currency_id"/>
                        </group>
                        <group string="Tarihler">
                            <field name="document_date"/>
                            <field name="send_date"/>
                            <field name="response_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Fatura ƒ∞√ßeriƒüi" name="invoice_lines">
                            <field name="line_ids" nolabel="1" context="{'tree_view_ref': 'mobilsoft_qnb_efatura.view_qnb_document_line_list'}"/>
                            <div class="oe_form_box_info oe_text_center" invisible="line_ids">
                                <p>
                                    <i class="fa fa-info-circle"/> Bu belgede hen√ºz fatura i√ßeriƒüi yok.
                                    <br/>
                                    "T√ºm Belgeleri Al" butonuna tƒ±klayarak XML'den fatura i√ßeriklerini alabilirsiniz.
                                </p>
                            </div>
                        </page>
                        <page string="Durum Ge√ßmi≈üi" name="status_history">
                            <field name="status_history" nolabel="1" readonly="1">
                                <list>
                                    <field name="timestamp"/>
                                    <field name="status"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Hata Detayƒ±" name="error_detail"
                              invisible="not error_message">
                            <group>
                                <field name="error_message" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- QNB Document List View -->
    <record id="view_qnb_document_list" model="ir.ui.view">
        <field name="name">qnb.document.list</field>
        <field name="model">qnb.document</field>
        <field name="arch" type="xml">
            <list string="e-Belgeler" decoration-danger="state == 'error'"
                  decoration-muted="state == 'draft'"
                  decoration-success="state in ('accepted', 'delivered')">
                <header>
                    <button name="action_fetch_all_documents" type="object" string="T√ºm Belgeleri Al (Gelen+Giden)" class="btn-primary"/>
                    <button name="action_sync_partners_from_documents" type="object" string="üë§ Partnerleri G√ºncelle" class="btn-secondary"/>
                    <button name="action_bulk_match_documents" type="object" string="üîó Belgeleri E≈üle≈ütir" class="btn-secondary"/>
                    <button name="action_cleanup_legacy_2025_draft_invoices" type="object" string="üßπ 2025 Taslak Faturalarƒ± Sil" class="btn-secondary" groups="base.group_system"/>
                </header>
                <field name="name"/>
                <field name="document_type"/>
                <field name="direction"/>
                <field name="partner_id"/>
                <field name="move_id" optional="hide"/>
                <field name="document_date"/>
                <field name="amount_total" sum="Toplam"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'sending'"
                       decoration-success="state in ('sent', 'delivered', 'accepted')"
                       decoration-danger="state in ('rejected', 'error')"
                       decoration-muted="state == 'draft'"/>
                <field name="send_date"/>
            </list>
        </field>
    </record>

    <!-- QNB Document Search View -->
    <record id="view_qnb_document_search" model="ir.ui.view">
        <field name="name">qnb.document.search</field>
        <field name="model">qnb.document</field>
        <field name="arch" type="xml">
            <search string="e-Belge Ara">
                <field name="name"/>
                <field name="ettn"/>
                <field name="partner_id"/>
                <filter string="E≈üle≈üti" name="matched" domain="[('move_id', '!=', False)]"/>
                <filter string="E≈üle≈ümedi" name="not_matched" domain="[('move_id', '=', False)]"/>
                <filter string="Giden" name="outgoing" domain="[('direction', '=', 'outgoing')]"/>
                <filter string="Gelen" name="incoming" domain="[('direction', '=', 'incoming')]"/>
                <filter string="e-Fatura" name="efatura" domain="[('document_type', '=', 'efatura')]"/>
                <filter string="e-Ar≈üiv" name="earsiv" domain="[('document_type', '=', 'earsiv')]"/>
                <filter string="e-ƒ∞rsaliye" name="eirsaliye" domain="[('document_type', '=', 'eirsaliye')]"/>
                <filter string="Taslak" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="G√∂nderildi" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Kabul Edildi" name="accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Hata" name="error" domain="[('state', '=', 'error')]"/>
            </search>
        </field>
    </record>

    <!-- QNB Document Status History Form (embedded) -->
    <record id="view_qnb_document_history_form" model="ir.ui.view">
        <field name="name">qnb.document.history.form</field>
        <field name="model">qnb.document.history</field>
        <field name="arch" type="xml">
            <form string="Durum Ge√ßmi≈üi">
                <group>
                    <field name="timestamp"/>
                    <field name="status"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Gelen + Giden T√úM Belgeleri Al Action -->
    <record id="action_qnb_fetch_all_documents" model="ir.actions.server">
        <field name="name">T√ºm Belgeleri Al (Gelen + Giden)</field>
        <field name="model_id" ref="model_qnb_document"/>
        <field name="state">code</field>
        <field name="code">
env['qnb.document'].action_fetch_all_documents()
        </field>
    </record>

    <!-- QNB Men√º √ñƒüesi -->
    <menuitem
        id="menu_qnb_solutions"
        name="QNB e-Solutions"
        parent="base.menu_administration"
        sequence="90"/>

    <menuitem
        id="menu_qnb_documents"
        name="Gelen e-Belgeler"
        parent="menu_qnb_solutions"
        action="action_qnb_fetch_all_documents"
        sequence="10"/>

</odoo>
