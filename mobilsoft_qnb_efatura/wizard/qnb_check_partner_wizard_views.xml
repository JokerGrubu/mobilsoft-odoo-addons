<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Check Partner Wizard Form -->
    <record id="view_qnb_check_partner_wizard_form" model="ir.ui.view">
        <field name="name">qnb.check.partner.wizard.form</field>
        <field name="model">qnb.check.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="e-Fatura Mükellefi Sorgula">
                <group>
                    <group string="Sorgu">
                        <field name="vkn_tckn" placeholder="VKN veya TCKN girin"/>
                    </group>
                </group>
                <group invisible="not result_html">
                    <field name="result_html" nolabel="1" readonly="1"/>
                </group>
                <group invisible="result_html">
                    <div class="alert alert-info" role="alert">
                        <span title="Bilgi">ℹ️</span>
                        VKN veya TCKN girerek GİB'den e-Fatura mükellefi sorgulaması yapabilirsiniz.
                    </div>
                </group>
                <footer>
                    <button string="Sorgula" name="action_check" type="object" 
                            class="btn-primary"/>
                    <button string="Kapat" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
