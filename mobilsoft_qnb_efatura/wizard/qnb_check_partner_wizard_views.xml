<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Check Partner Wizard Form — VKN/TCKN ile Nilvera'dan cari sorgula ve otomatik oluştur -->
    <record id="view_qnb_check_partner_wizard_form" model="ir.ui.view">
        <field name="name">qnb.check.partner.wizard.form</field>
        <field name="model">qnb.check.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="VKN/TCKN ile Cari Sorgula">
                <group>
                    <group string="Sorgu">
                        <field name="vkn_tckn" placeholder="VKN veya TCKN girin"/>
                    </group>
                    <group invisible="1">
                        <field name="partner_id"/>
                    </group>
                </group>
                <group invisible="not result_html">
                    <field name="result_html" nolabel="1" readonly="1"/>
                </group>
                <group invisible="result_html">
                    <div class="alert alert-info" role="alert">
                        <span title="Bilgi">ℹ️</span>
                        VKN veya TCKN girip "Sorgula"ya tıklayın. Tüm cari bilgileri Nilvera'dan gelecek ve kayıt otomatik oluşturulacak/güncellenecektir.
                    </div>
                </group>
                <footer>
                    <button string="Sorgula" name="action_check" type="object" 
                            class="btn-primary" invisible="result_html"/>
                    <button string="Carisi Görüntüle" name="action_view_partner" type="object" 
                            class="btn-primary" invisible="not partner_id"/>
                    <button string="Kapat" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
