<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Gelen Belgeleri Otomatik Çekme -->
        <record id="ir_cron_qnb_fetch_incoming" model="ir.cron">
            <field name="name">QNB: Gelen Belgeleri Çek</field>
            <field name="model_id" ref="model_qnb_document"/>
            <field name="state">code</field>
            <field name="code">model._cron_fetch_incoming_documents()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Giden Belgeleri Otomatik Çek -->
        <record id="ir_cron_qnb_fetch_outgoing" model="ir.cron">
            <field name="name">QNB: Giden Belgeleri Çek</field>
            <field name="model_id" ref="model_qnb_document"/>
            <field name="state">code</field>
            <field name="code">model._cron_fetch_outgoing_documents()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Belge Durumlarını Otomatik Kontrol -->
        <record id="ir_cron_qnb_check_status" model="ir.cron">
            <field name="name">QNB: Belge Durumlarını Kontrol Et</field>
            <field name="model_id" ref="model_qnb_document"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_document_status()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Müşteri e-Fatura Durumlarını Otomatik Güncelle -->
        <record id="ir_cron_qnb_check_partners" model="ir.cron">
            <field name="name">QNB: Müşteri e-Fatura Durumlarını Güncelle</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_efatura_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Kontör Uyarı Kontrolü -->
        <record id="ir_cron_qnb_credit_alert" model="ir.cron">
            <field name="name">QNB: Kontör Uyarı Kontrolü</field>
            <field name="model_id" ref="model_res_company"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_credit_alert()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
