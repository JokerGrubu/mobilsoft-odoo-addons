<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_qnb_fetch_incoming" model="ir.cron">
            <field name="name">QNB: Gelen Belgeleri Çek</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model._cron_qnb_get_new_incoming_documents()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_qnb_fetch_outgoing" model="ir.cron">
            <field name="name">QNB: Giden PDF'leri Çek</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model._cron_qnb_get_sale_pdf()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_qnb_check_status" model="ir.cron">
            <field name="name">QNB: Belge Durumlarını Kontrol Et</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model._cron_qnb_get_invoice_status()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_qnb_credit_alert" model="ir.cron">
            <field name="name">QNB: Kontör Uyarı Kontrolü</field>
            <field name="model_id" ref="model_res_company"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_credit_alert()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
