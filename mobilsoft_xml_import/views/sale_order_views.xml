<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Form View Extension -->
    <record id="sale_order_form_view_dropship" model="ir.ui.view">
        <field name="name">sale.order.form.dropship</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="has_dropship_products" invisible="1"/>
                <field name="dropship_status" invisible="not has_dropship_products" decoration-info="dropship_status == 'pending'" decoration-warning="dropship_status == 'ordered'" decoration-success="dropship_status == 'delivered'" widget="badge"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Tree View Extension -->
    <record id="sale_order_tree_view_dropship" model="ir.ui.view">
        <field name="name">sale.order.tree.dropship</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="dropship_status" optional="hide" decoration-info="dropship_status == 'pending'" decoration-warning="dropship_status == 'ordered'" decoration-success="dropship_status == 'delivered'" widget="badge"/>
            </xpath>
        </field>
    </record>

</odoo>
