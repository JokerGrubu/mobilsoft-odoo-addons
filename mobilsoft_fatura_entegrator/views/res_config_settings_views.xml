<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Fatura Entegratör Ayarları -->
    <record id="view_fatura_entegrator_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.fatura.entegrator</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Fatura Entegratör" string="Fatura Entegratör" data-key="mobilsoft_fatura_entegrator" groups="base.group_system">
                    <h2>Fatura Entegratör API</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="fe_api_key"/>
                                <div class="text-muted">
                                    Fatura Entegratör API anahtarınızı girin
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fe_api_key" password="True" class="oe_inline"/>
                                    </div>
                                    <div class="mt8">
                                        <button name="fe_connect"
                                                type="object"
                                                string="Bağlan"
                                                class="btn-primary"
                                                invisible="fe_sale_channel_id"/>
                                        <button name="fe_disconnect"
                                                type="object"
                                                string="Bağlantıyı Kes"
                                                class="btn-secondary"
                                                invisible="not fe_sale_channel_id"/>
                                    </div>
                                    <div class="mt8" invisible="not fe_sale_channel_id">
                                        <field name="fe_sale_channel_id" readonly="1"/>
                                        <field name="fe_sale_channel_name" readonly="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>İnternet Satışı Varsayılanları</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fe_is_internet_sale"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fe_is_internet_sale"/>
                                <div class="text-muted">
                                    E-ticaret satışları için aktif edin
                                </div>
                                <div class="content-group mt16" invisible="not fe_is_internet_sale">
                                    <div class="row">
                                        <label for="fe_payment_method" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_payment_method"/>
                                    </div>
                                    <div class="row">
                                        <label for="fe_payment_platform" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_payment_platform" placeholder="örn: iyzico, PayTR"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fe_is_need_shipment"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fe_is_need_shipment"/>
                                <div class="text-muted">
                                    Kargo ile teslimat yapılıyorsa aktif edin
                                </div>
                                <div class="content-group mt16" invisible="not fe_is_need_shipment">
                                    <div class="row">
                                        <label for="fe_shipment_company_title" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_shipment_company_title" placeholder="örn: Yurtiçi Kargo"/>
                                    </div>
                                    <div class="row">
                                        <label for="fe_shipment_company_tax_number" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_shipment_company_tax_number"/>
                                    </div>
                                    <div class="row">
                                        <label for="fe_shipment_courier_name" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_shipment_courier_name"/>
                                    </div>
                                    <div class="row">
                                        <label for="fe_shipment_courier_tax_number" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="fe_shipment_courier_tax_number" placeholder="TC Kimlik No"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Muafiyet Varsayılanları</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="fe_exemption_code"/>
                                <div class="text-muted">
                                    Varsayılan KDV muafiyet kodu seçin
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fe_exemption_code"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
