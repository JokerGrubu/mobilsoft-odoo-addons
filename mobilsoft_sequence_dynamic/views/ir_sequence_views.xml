<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add placeholder fields to ir.sequence form view -->
    <record id="view_sequence_form_inherit" model="ir.ui.view">
        <field name="name">ir.sequence.form.inherit.placeholders</field>
        <field name="model">ir.sequence</field>
        <field name="inherit_id" ref="base.sequence_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Placeholder Replacement" attrs="{'invisible': [('use_date_range', '=', False)]}" name="placeholder_replacement">
                    <group>
                        <field name="use_placeholder_replacement"/>
                        <field name="month_placeholder" attrs="{'invisible': [('use_placeholder_replacement', '=', False)]}"/>
                        <field name="year_placeholder" attrs="{'invisible': [('use_placeholder_replacement', '=', False)]}"/>
                    </group>
                    <field name="mapping_ids" attrs="{'invisible': [('use_placeholder_replacement', '=', False)]}">
                        <tree editable="bottom">
                            <field name="mapping_type"/>
                            <field name="value"/>
                            <field name="replacement"/>
                        </tree>
                    </field>
                    <div class="alert alert-info" role="alert" attrs="{'invisible': [('use_placeholder_replacement', '=', False)]}">
                        <p><strong>How to use:</strong></p>
                        <p>1. Enable use date range</p>
                        <p>2. Enable placeholder replacement</p>
                        <p>3. Define placeholders for month and/or year (default: @ for month, # for year). You can use multiple characters for each placeholder.</p>
                        <p>4. Add mappings for each month (1-12) or year you want to replace</p>
                        <p>5. Include the placeholders in your sequence format (e.g., "ABC/@/####")</p>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Sequence Mapping views -->
    <record id="view_sequence_mapping_tree" model="ir.ui.view">
        <field name="name">ir.sequence.mapping.tree</field>
        <field name="model">ir.sequence.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence_id"/>
                <field name="mapping_type"/>
                <field name="value"/>
                <field name="replacement"/>
            </tree>
        </field>
    </record>

    <record id="view_sequence_mapping_form" model="ir.ui.view">
        <field name="name">ir.sequence.mapping.form</field>
        <field name="model">ir.sequence.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sequence_id"/>
                            <field name="mapping_type"/>
                            <field name="value"/>
                        </group>
                        <group>
                            <field name="replacement"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sequence_mapping" model="ir.actions.act_window">
        <field name="name">Sequence Mappings</field>
        <field name="res_model">ir.sequence.mapping</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sequence_mapping"
              name="Sequence Mappings"
              parent="base.next_id_5"
              action="action_sequence_mapping"
              sequence="20"/>
</odoo>
