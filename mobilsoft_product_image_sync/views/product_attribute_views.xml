<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_attribute_view_form_inherit" model="ir.ui.view">
        <field name="name">product.attribute.form.inherit.image.sync</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="sync_images" widget="boolean_toggle" string="Sync Variants Images"/>
            </field>
        </field>
    </record>

    <record id="product_attribute_view_tree_inherit" model="ir.ui.view">
        <field name="name">product.attribute.tree.inherit.image.sync</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.attribute_tree_view"/>
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="sync_images" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>
